--designed by sanwenjing

function out(txt)
print(txt.."\n")
end

function fl()
out("FL:"..turtle.getFuelLevel())
end
function rf()
local pos=turtle.getSelectedSlot()
turtle.select(16)
turtle.refuel()
turtle.select(pos)
end

function bk(step)
tBk()
if step then dig(step)
  tBk()
  end
end


function dig(step)
rf()
for i=1,step,1 do
goFwd()
turtle.digDown()
while turtle.digUp() do sleep(0.5) end
fl()
out("Step:"..(step-i))
end
end

function goFwd()
while(not turtle.forward()) do turtle.dig() end
end

function goUp(step)
 if step==nil then step=1 end
 for i=1,step do
	while turtle.detectUp() or not turtle.up() do turtle.digUp() end
 end
end

function goDn(step)
	if step==nil then step=1 end
	for i=1,step do
		while not turtle.down() do turtle.digDown() end
	end
end

function tBk()
for i=1,2 do turtle.turnRight() end
end
